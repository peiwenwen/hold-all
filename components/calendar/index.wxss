@import '../../app.wxss';
.controller {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 64rpx;
}
.controller .cur {
  font-size: 36rpx;
}

.calendar-wrap {
  margin-top: 24rpx;
}
.week-wrap {
  display: flex;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.week-wrap .week {
  width: 14%;
}
.days {
  display: flex;
  flex-wrap: wrap;
  margin: 16rpx 0;
  border-top: solid 1rpx #F5F5F5;
  border-left: solid 1rpx #F5F5F5;
}
.day {
  position: relative;
  display: flex;
  width: 14%;
  height: 160rpx;
  flex-direction: column;
  border-right: solid 1rpx #F5F5F5;
  border-bottom: solid 1rpx #F5F5F5;
}

.num {
  margin: 4rpx;
  width: 46rpx;
  max-height: 46rpx;
  text-align: center;
  line-height: 46rpx;
  font-size: 24rpx;
}

.week-str {
  padding-left: 8rpx;
  font-size: 20rpx;
}

.row {
  width: 100%;
  height: 90rpx;
  align-items: center;
  flex-direction: initial;
}

.row .num {
  height: 100rpx;
}

.days .check {
  /* outline: solid 1rpx #9dc3e2; */
}

.check .num {
  color: #fff;
  background-color: #9dc3e2;
  border-radius: 50%;
}
.disable {
  color: #aaa;
}
.tag {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 6rpx;
  background: no-repeat center / 24rpx url(data:image/png;base64,);
}
.plan-min {
  display: flex;
  flex: 1;
  padding: 4rpx;
  height: 100%;
  overflow-y: auto;
  flex-wrap: wrap;
  box-sizing: border-box;
}

.row .plan-min {
  align-items: center;
}

.plan {
  width: 100%;
  line-height: 1.3;
  font-size: 22rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
