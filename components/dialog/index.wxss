@import '../../app.wxss';
.mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0,0,0,.5);
}

.dialog {
  position: fixed;
  top: 20%;
  right: 24rpx;
  bottom: 20%;
  left: 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
  z-index: 11;
}
.dialog-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid 1px #eee;
}
.dialog-head .title {
  padding: 24rpx;
}
.dialog-head .icon-close {
  margin-right: 24rpx;
}

.dialog-content {
  padding: 12rpx 24rpx 60rpx;
}

.btn-wrap {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-top: solid 1px #eee;
}

.btn {
  margin: 24rpx auto;
  padding: 12rpx 0;
  width: 160rpx;
  text-align: center;
  background-color: #7facd6;
  color: #fff;
  border-radius: 6rpx;
}